@page
@model SeguimientoAcademico.App.Presentacion.Pages.Estudiantes.DocenteModel
@{
}
<h1>Registro de Docente</h1>

<form method="post">
    <div class="form-group"> 
        <label asp-for="estudiante.Id"></label>
        <input asp-for="estudiante.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Nombre"></label>
        <input asp-for="estudiante.Nombre" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="estudiante.Apellido"></label>
        <input asp-for="estudiante.Apellido" class="form-control" readonly>
    </div>    
    <div class="form-group">
        <label asp-for="maestro.Nombre"></label>
        <input asp-for="maestro.Nombre" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="maestro.Apellido"></label>
        <input asp-for="maestro.Apellido" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="maestro.Telefono"></label>
        <input asp-for="maestro.Telefono" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="maestro.genero"></label>
        <select asp-for="maestro.genero" class="form-control">
            <option value="femenino">FEMENINO</option>
            <option value="masculino">MASCULINO</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="maestro.TarjetaProfesional"></label>
        <input asp-for="maestro.TarjetaProfesional" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Registrar</button>
</form>
